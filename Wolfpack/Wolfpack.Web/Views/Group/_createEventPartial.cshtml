@model Wolfpack.Web.Models.Group.GroupVM

<div id="newEventModal" class="modal-background">
    <div class="modal">
        <div class="modal-heading">
            <h2>Create new event</h2>
            <button class="modal-close"><i class="fas fa-times fa-3x icon-only"></i> </button>
        </div>
        <div class="form-box modal-form">
            @using (Html.BeginForm("NewEvent", "Group", FormMethod.Post))
        {
            @Html.ValidationSummary()
            <div class="form-item">
                @Html.EditorFor(m => m.NewEventName, new { htmlAttributes = new { required = "required" } })
                @Html.LabelFor(m => m.NewEventName, new { htmlAttributes = new { required = "required" } })
            </div>

            @Html.HiddenFor(m => m.Id)
        if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="form-item">
                @Model.Message
            </div>
    }
    <input type="submit" class="submit-button" value="NewEvent" />
}
        </div>
    </div>
</div>
