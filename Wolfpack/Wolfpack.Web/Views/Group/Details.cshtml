@model Wolfpack.Data.Models.Group

@{
    ViewBag.Title = "Details";
}
<div class="info-box">
    <h2>Details for @Html.DisplayFor(model => model.GroupName)</h2>
    <p>
        @Html.ActionLink("Create Event", "NewEvent", new { Id = Model.Id })
    </p>

    <h3>Basic info</h3>
    <h4>@Html.DisplayNameFor(model => model.Category)</h4>
    <p>@Html.DisplayFor(model => model.Category)</p>
    <h4>@Html.DisplayNameFor(model => model.CreatedOn)</h4>
    <p>@Html.DisplayFor(model => model.CreatedOn)</p>

    <h3>Skills in this group</h3>
    <ul>
        @foreach (var Skill in Model.Skills)
        {
            <li>@Skill.Name</li>
        }
    </ul>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>

