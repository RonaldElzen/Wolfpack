@model Wolfpack.Web.Models.Group.GroupVM

@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>
<h3>Add New skill</h3>
<div class="form-box">
    @using (Html.BeginForm("AddSkill", "Group"))
    {
        @Model.Message
        @Html.ValidationSummary()
        <div class="form-item">
            @Html.EditorFor(m => m.NewSkill.Name, new { htmlAttributes = new { required = "required" } })
            @Html.LabelFor(m => m.NewSkill.Name, new { htmlAttributes = new { required = "required" } })
        </div>
        <div class="form-item">
            @Html.EditorFor(m => m.NewSkill.Description, new { htmlAttributes = new { required = "required" } })
            @Html.LabelFor(m => m.NewSkill.Description, new { htmlAttributes = new { required = "required" } })
        </div>
        @Html.HiddenFor(m => m.Id)
        <input type="submit" class="submit-button" value="Submit" />
    }
</div>